doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    title Java Archive Downloader
    script(src='popup.js')
  body
    label Version:
      select(id='version')
        option
        option(value='8') Java 8
        option(value='7') Java 7
        option(value='6') Java 6
    label Update:
      select(id='update')
    label Platform:
      select(id='platform')
    button(type='button', id='dl') Download
